{
  "name": "@dgrammatiko/formally",
  "version": "0.0.1",
  "description": "Form validation leveraging the platform",
  "main": "src/index.js",
  "scripts": {
    "build": "npx rollup -c build/rollup.config.iife.es5.min.js && npx rollup -c build/rollup.config.iife.es6.min.js && npx rollup -c build/rollup.config.nocode.iife.es5.min.js && npx rollup -c build/rollup.config.nocode.iife.es6.min.js",
    "test": "npx eslint src/. && npx mocha --require @babel/register --recursive --recursive tests",
    "sass:tokens": "npx json-to-scss docs/_data/tokens.json docs/scss/_tokens.scss",
    "sass:process": "npm run sass:tokens && sass docs/scss/global.scss docs/_includes/assets/css/global.css --style=compressed",
    "cms:precompile": "make-dir dist/admin && nunjucks-precompile docs/_includes > dist/admin/templates.js -i \"\\.(njk|css|svg)$\"",
    "cms:bundle": "rollup --config",
    "start": "concurrently \"npm run sass:process -- --watch\" \"npm run cms:bundle -- --watch\" \"chokidar \\\"docs/_includes/**\\\" -c \\\"npm run cms:precompile\\\"\" \"npm run serve\"",
    "serve": "cross-env ELEVENTY_ENV=development npx eleventy --serve",
    "production": "npm run sass:process && npm run cms:precompile && npm run cms:bundle && npx eleventy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dgrammatiko/formally.git"
  },
  "keywords": [
    "form",
    "validation",
    "bootstrap",
    "foundation",
    "uikit",
    "bulma",
    "vanilla",
    "javascript"
  ],
  "author": "Dimitrios Grammatikogiannis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dgrammatiko/formally/issues"
  },
  "homepage": "https://github.com/dgrammatiko/formally#readme",
  "devDependencies": {
    "@babel/cli": "7.7.5",
    "@babel/core": "7.7.5",
    "@babel/node": "7.7.4",
    "@babel/plugin-transform-runtime": "7.7.6",
    "@babel/preset-env": "7.7.6",
    "@babel/register": "7.7.4",
    "@babel/runtime-corejs2": "7.7.6",
    "@rollup/plugin-node-resolve": "6.0.0",
    "babel-preset-env": "1.7.0",
    "brotli": "1.3.2",
    "chai": "4.2.0",
    "mocha": "6.2.2",
    "node-zopfli": "2.1.3",
    "rollup": "1.27.9",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-gzip": "2.2.0",
    "rollup-plugin-terser": "5.1.2",
    "sinon": "7.5.0",
    "@erquhart/rollup-plugin-node-builtins": "2.1.5",
    "bl": "3.0.0",
    "chokidar-cli": "2.0.0",
    "cross-env": "5.2.0",
    "gh-pages": "2.1.1",
    "make-dir-cli": "2.0.0",
    "prettier": "1.18.2",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-resolve": "5.0.3"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.9.0",
    "@11ty/eleventy-plugin-rss": "^1.0.6",
    "@11ty/eleventy-plugin-syntaxhighlight": "^2.0.3",
    "@tbranyen/jsdom": "^13.0.0",
    "concurrently": "^5.0.0",
    "html-minifier": "^4.0.0",
    "json-to-scss": "^1.3.1",
    "sass": "^1.21.0",
    "semver": "^6.3.0",
    "slugify": "^1.3.4",
    "stalfos": "github:hankchizljaw/stalfos#c8971d22726326cfc04089b2da4d51eeb1ebb0eb"
  }
}