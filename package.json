{
  "name": "@dgrammatiko/formally",
  "version": "0.0.1",
  "description": "Form validation leveraging the platform",
  "main": "src/formvalidatorbase.js",
  "type": "module",
  "scripts": {
    "build": "npx eslint src/. && node -r esm build.mjs",
    "sass:tokens": "npx json-to-scss docs/_data/tokens.json docs/scss/_tokens.scss",
    "sass:process": "npm run sass:tokens && sass docs/scss/global.scss docs/_includes/assets/css/global.css --style=compressed",
    "cms:precompile": "make-dir dist/admin && nunjucks-precompile docs/_includes > dist/admin/templates.js -i \"\\.(njk|css|svg)$\"",
    "cms:bundle": "rollup --config",
    "lint": "npx eslint src/.",
    "start": "concurrently \"npm run sass:process -- --watch\" \"npm run cms:bundle -- --watch\" \"chokidar \\\"docs/_includes/**\\\" -c \\\"npm run cms:precompile\\\"\" \"npm run serve\"",
    "serve": "cross-env ELEVENTY_ENV=development npx eleventy --serve",
    "production": "npm run sass:process && npm run cms:precompile && npm run cms:bundle && npx eleventy",
    "cy:start": "http-server -p 3030",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "cy:test": "start-server-and-test cy:start http://localhost:3030 cy:run",
    "test": "npm run lint && npm run cy:test",
    "cy:test-open": "start-server-and-test cy:start http://localhost:3030 cy:open"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dgrammatiko/formally.git"
  },
  "keywords": [
    "form",
    "validation",
    "bootstrap",
    "foundation",
    "uikit",
    "bulma",
    "vanilla",
    "javascript"
  ],
  "author": "Dimitrios Grammatikogiannis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dgrammatiko/formally/issues"
  },
  "homepage": "https://github.com/dgrammatiko/formally#readme",
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.9.0",
    "@babel/node": "7.8.7",
    "@babel/plugin-transform-runtime": "7.9.0",
    "@babel/preset-env": "7.9.5",
    "@babel/register": "7.9.0",
    "@babel/runtime-corejs2": "7.9.2",
    "@erquhart/rollup-plugin-node-builtins": "2.1.5",
    "@rollup/plugin-commonjs": "11.1.0",
    "@rollup/plugin-node-resolve": "7.1.3",
    "babel-preset-env": "1.7.0",
    "bl": "4.0.2",
    "brotli": "1.3.2",
    "chokidar-cli": "2.1.0",
    "compress-brotli": "1.2.2",
    "cross-env": "7.0.2",
    "cypress": "3.8.3",
    "esm": "3.2.25",
    "fs-extra": "9.0.0",
    "gh-pages": "2.2.0",
    "http-server": "0.12.3",
    "make-dir-cli": "2.0.0",
    "node-zopfli": "2.1.3",
    "prettier": "2.0.5",
    "prismjs": "1.20.0",
    "rollup": "2.7.3",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-gzip": "2.4.0",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-terser": "5.3.0",
    "start-server-and-test": "1.11.0",
    "zlib": "1.0.5"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@11ty/eleventy-plugin-rss": "^1.0.6",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.0",
    "@tbranyen/jsdom": "^13.0.0",
    "concurrently": "^5.0.0",
    "html-minifier": "^4.0.0",
    "json-to-scss": "^1.3.1",
    "recursive-readdir": "^2.2.2",
    "sass": "^1.21.0",
    "semver": "^7.0.0",
    "slugify": "^1.3.4",
    "stalfos": "github:hankchizljaw/stalfos#c8971d22726326cfc04089b2da4d51eeb1ebb0eb"
  }
}
